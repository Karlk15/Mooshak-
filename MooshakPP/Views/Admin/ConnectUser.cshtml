@model MooshakPP.Models.ViewModels.AddConnectionsViewModel
@{
    ViewBag.Title = "Connect users";
}

<div class="row">
    <div class="col-md-8">
        <form>
            <div class="form-group">
                @Html.DropDownListFor(x => x.courses, Model.courses.Select(f => new SelectListItem { Text = f.name, Value = f.ID.ToString() }), new { @id = "courselist" })
            </div>
            <div class="form-group">
                @Html.ListBoxFor(x => x.connectedUser, Model.connectedUser.Select(f => new SelectListItem { Text = f.email, Value = f.ID.ToString() }), new { @class = "listbox col-md-offset-0" })
                @Html.ListBoxFor(x => x.notConnectedUser, Model.notConnectedUser.Select(f => new SelectListItem { Text = f.email, Value = f.ID.ToString() }), new { @class = "listbox col-md-offset-2"})
            </div>
            <div class="form-group col-md-offset-5">
                <input type="submit" class="btn btn-default" id="connectSubmit" value="Connect" />
            </div>
        </form>
    </div>

</div>