@model MooshakPP.Models.ViewModels.CreateCourseViewModel
@{
    ViewBag.Title = "CreateCourse";
}

<h3>Create a course</h3>

<div class="col-md-6">
    @using (Html.BeginForm("CreateCourse", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="form-group">
                @Html.TextBoxFor(m => m.newCourse.name, new { @class = "form-control", placeholder = "Enter course name" })
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Create course" />
            </div>
        </div>
    }
</div>  
@Html.ListBoxFor(x => x.courses, Model.courses.Select(f => new SelectListItem { Text = f.name, Value = f.ID.ToString() }), new { @class = "courselist"})