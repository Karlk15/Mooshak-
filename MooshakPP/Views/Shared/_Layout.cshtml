<!DOCTYPE html>
@using Microsoft.AspNet.Identity
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mooshak++</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                </button>
                    <a id="logolink" class="navbar-brand" href="@Url.Action("Index")">
                    <img id="logo" src=@Url.Content("~/Content/Photos/TheLogo.png") />
                </a>
                @Html.ActionLink("Mooshak++", "Index", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()

                    <ul class="nav navbar-nav navbar-right">

                        <li>
                            <a role="button" data-toggle="collapse" href=".collapseExample" aria-expanded="false" aria-controls="collapseExample"> Change course </a>
                        </li>

                        <li>
                            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>

                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                        </li>

                    </ul>
                }
            }
        </div>
        <div class="m-barborder"></div>
        
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <footer>
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <div class="m-barborder"></div>
                    <div class="container">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                        <p id="copyright">&copy; @DateTime.Now.Year - Mooshak++</p>
                    </div>
                </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/bootstrap") 
    @RenderSection("scripts", required: false)
</body>
</html>

