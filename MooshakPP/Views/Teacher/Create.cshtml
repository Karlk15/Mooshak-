@model MooshakPP.Models.ViewModels.CreateAssignmentViewModel
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-6">
        <h2>@ViewBag.selectedCourseName</h2>
    </div>

    <div class="col-md-6">
        @Html.ActionLink("Back", "Index", "Teacher", null, new { @class = "btn btn-primary backbutton" })
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Create assignment</h3>
        <div class="col-md-6">
            @using (Html.BeginForm("Create", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input type="hidden" name="courseID" value="@Model.newAssignment.courseID" />
                    @Html.TextBoxFor(m => m.newAssignment.title, new { @class = "form-control", placeholder = "Enter assignment name" })
                    @Html.TextBoxFor(d => d.newAssignment.dueDate, new { @class = "form-control"})
                    <input type="text" id="datepicker" />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Create assignment" />
                </div>
            }
        </div>
    </div>

    <div class="col-md-6">
        <h3>Existing assignments</h3>
        @using (Html.BeginForm("Create", "Teacher", FormMethod.Post, new { @class = "interactiveList" }))
        {
            <div class="courselist">
                <table>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var assign in Model.assignments)
                            {
                                <tr>
                                    <td>@Html.ActionLink(@assign.title, "Create", "Teacher", new { id = @assign.ID })</td >
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <hr />
            @Html.ActionLink("Manage Milestones", "AddMilestones", "Teacher", new { id = @ViewBag.selectedAssignment }, new { @class = "btn btn-default" })
        }
    </div>
</div>
