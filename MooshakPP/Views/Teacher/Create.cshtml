@model MooshakPP.Models.ViewModels.CreateAssignmentViewModel
@{
    ViewBag.Title = "Create";
}

<h3>Create assignment</h3>

<div class="row">
    <div class="col-md-6">
        <h4>@ViewBag.selectedCourseName</h4>
        @using (Html.BeginForm("Create", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
           @Html.AntiForgeryToken()

            <div class="row">
                <div class="form-group">
                    <input type="hidden" name="courseID" value="@Model.newAssignment.courseID" />
                    @Html.TextBoxFor(m => m.newAssignment.title, new { @class = "form-control", placeholder = "Enter assignment name" })
                    @Html.TextBoxFor(d => d.newAssignment.dueDate, new { @class = "form-control", placeholder = "Enter due date" })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Create assignment" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="courselist col-md-6">
        <h3>Existing assignments</h3>
        <table>
            <tbody>
                @if (Model != null)
            {
                foreach (var assign in Model.assignments)
                {
                        <tr>
                            <td>@Html.ActionLink(@assign.title, "Create", "teacher", new { id = @assign.ID }, null)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@Html.ActionLink("Connect users", "ConnectUser", "teacher", new { id = @ViewBag.selectedCourse }, null)